<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_menu" >

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="#525252">
    </View>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.studieux.main.MenuButton
            android:id="@+id/coursButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_marginBottom="1dp"
            android:tag="bouton0"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/redButtons" />
            
            <ImageView 
                android:id="@+id/parametres_images"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/parametres2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:text="COURS"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.studieux.main.MenuButton>
        
        <com.studieux.main.MenuButton
            android:id="@+id/devoirsButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" 
            android:tag="bouton1"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view2"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>
			
            <ImageView 
                android:id="@+id/parametres_images"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/parametres2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="DEVOIRS"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            
        </com.studieux.main.MenuButton>
        
        <com.studieux.main.MenuButton 
            android:id="@+id/matieresButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" 
            android:tag="bouton2"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view3"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView 
                android:id="@+id/parametres_images"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/parametres2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="MATIERES"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            
        </com.studieux.main.MenuButton>
        
        <com.studieux.main.MenuButton
            android:id="@+id/parametresButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" 
            android:tag="bouton3"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view4"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>
            
            <ImageView 
                android:id="@+id/parametres_images"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/parametres2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="PARAMETRES"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />
            
        </com.studieux.main.MenuButton>
        
    </LinearLayout>
      
</RelativeLayout>