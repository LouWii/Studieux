<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_menu" >

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="#525252">
    </View>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.studieux.main.MenuButton
            android:id="@+id/coursButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_marginBottom="1dp"
            android:tag="0"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Cours"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.studieux.main.MenuButton>
        
        <com.studieux.main.MenuButton
            android:id="@+id/devoirsButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" 
            android:tag="1"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>
			
            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Devoirs"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            
        </com.studieux.main.MenuButton>
        
        <com.studieux.main.MenuButton 
            android:id="@+id/matieresButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" 
            android:tag="2"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Matières"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            
        </com.studieux.main.MenuButton>
        
        <com.studieux.main.MenuButton
            android:id="@+id/parametresButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:clickable="true" 
            android:tag="3"
            android:background="@drawable/sliding_button_custom">

            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Paramètres"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            
        </com.studieux.main.MenuButton>
        
    </LinearLayout>
      
</RelativeLayout>