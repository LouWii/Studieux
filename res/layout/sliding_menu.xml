<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_menu" >

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="#525252" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.studieux.main.MenuButton
            android:id="@+id/acceuilButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/sliding_button_custom" >

            <View
                android:id="@+id/viewRed0"
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/school_white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:text="ACCUEIL"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.studieux.main.MenuButton>

        <com.studieux.main.MenuButton
            android:id="@+id/periodesButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/sliding_button_custom" >

            <View
                android:id="@+id/viewRed1"
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:text="PERIODES"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.studieux.main.MenuButton>

        <com.studieux.main.MenuButton
            android:id="@+id/matieresButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/sliding_button_custom" >

            <View
                android:id="@+id/viewRed2"
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blackboard_white" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:text="MATIERES"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.studieux.main.MenuButton>

        <com.studieux.main.MenuButton
            android:id="@+id/devoirsButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/sliding_button_custom" >

            <View
                android:id="@+id/viewRed3"
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/studentlaptop_white" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:text="DEVOIRS"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.studieux.main.MenuButton>

        <com.studieux.main.MenuButton
            android:id="@+id/notesButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/sliding_button_custom" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/graph" />
            
            <View
                android:id="@+id/viewRed4"
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily=""
                android:gravity="center_vertical"
                android:text="NOTES"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.studieux.main.MenuButton>
    </LinearLayout>

</RelativeLayout>