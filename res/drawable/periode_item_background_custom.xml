<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#d5d5d5"
                android:endColor="#d5d5d5"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/redButtons"
                android:startColor="@color/redButtons"
                android:angle="270" />
        </shape>
    </item>

    <item>  
        <shape>
            <gradient
                android:endColor="#e4e4e4"
                android:startColor="#e4e4e4"
                android:angle="270" />
        </shape>
    </item>
</selector>