<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/redButtons"
                android:endColor="@color/redButtons"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/redButtons"
                android:startColor="@color/redButtons"
                android:angle="270" />
        </shape>
    </item>

    <item>  
        <shape>
            <gradient
                android:endColor="@color/gray_menu"
                android:startColor="@color/gray_menu"
                android:angle="270" />
        </shape>
    </item>
</selector>