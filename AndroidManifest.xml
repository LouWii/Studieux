<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studieux.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.studieux.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/MyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.studieux.main.CoursActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_cours"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.PeriodeActivity"
            android:label="@string/title_activity_periode"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.PeriodeAddActivity"
            android:label="@string/title_activity_periode_add"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.MatiereActivity"
            android:label="@string/title_activity_matiere"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.MatiereAddActivity"
            android:label="@string/title_activity_matiere_add"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.NoteAddActivity"
            android:label="@string/title_activity_note_add"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.studieux.main.CoursAddActivity"
            android:label="@string/title_activity_cours_add" >
        </activity>
    </application>

</manifest>